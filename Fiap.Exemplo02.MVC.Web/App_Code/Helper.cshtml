@helper Submit(string name, string classe)
{
    <input type="submit" value="Salvar" class="btn btn-success" />
}

@helper Message(object mensagem, string classe)
{
    if (mensagem != null)
    {
        <div class="@classe">
            @mensagem
        </div>
    }
}

@helper SubmitIcon(string icon, string classe)
    {
        <button type="submit" class="@classe">
            <span class="@icon"></span>
        </button>
    }